# PipLine Treasury System - Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
DEBUG=False

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@localhost:5432/pipeline_pro
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pipeline_pro
POSTGRES_USER=pipeline_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_SSL_MODE=prefer

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here

# Security Configuration
BULK_DELETE_CONFIRMATION_CODE=4561
JWT_SECRET_KEY=your-jwt-secret-key-here

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=/var/log/pipeline/pipeline.log

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE_HOURS=12

# System Monitoring
DB_CONNECTION_MONITORING=True
DB_HEALTH_CHECK_INTERVAL=300
DB_PERFORMANCE_MONITORING=True
