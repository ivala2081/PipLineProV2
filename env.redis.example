# Redis Configuration for PipLinePro
# Copy this file to .env.redis and update the values as needed

# Redis Connection
REDIS_URL=redis://:pipeline_redis_2024@localhost:6379/0
REDIS_PASSWORD=pipeline_redis_2024
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Redis Performance Tuning
REDIS_MAX_MEMORY=2gb
REDIS_MAX_CLIENTS=10000
REDIS_TIMEOUT=300
REDIS_POOL_SIZE=20
REDIS_POOL_TIMEOUT=30

# Redis Commander (Web UI)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# Redis Insight (Advanced UI)
REDIS_INSIGHT_ENABLED=true

# Redis Streams Configuration
REDIS_STREAM_NAME=pipeline_events
REDIS_CONSUMER_GROUP=pipeline_consumers
REDIS_STREAM_MAX_LEN=10000

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_TRANSACTION_TTL=1800
CACHE_ANALYTICS_TTL=3600
CACHE_USER_TTL=7200

# Event Configuration
EVENT_RETENTION_DAYS=30
EVENT_BATCH_SIZE=100
EVENT_PROCESSING_INTERVAL=5

# Monitoring
REDIS_MONITORING_ENABLED=true
REDIS_SLOW_LOG_THRESHOLD=10000
REDIS_LATENCY_MONITOR_THRESHOLD=100
