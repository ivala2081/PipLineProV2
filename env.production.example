# Production Environment Variables for PipLinePro
# Copy this file to .env and update values for production deployment

# === APPLICATION SETTINGS ===
FLASK_ENV=production
FLASK_APP=app.py
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-key-for-external-services

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://pipelinepro:your-db-password@db:5432/pipelinepro_prod
DB_PASSWORD=your-secure-database-password

# === REDIS CONFIGURATION ===
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FILE=/app/logs/pipelinepro_production.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# === PERFORMANCE SETTINGS ===
WORKERS=4
WORKER_CONNECTIONS=1000
TIMEOUT=30
KEEPALIVE=2

# === SECURITY SETTINGS ===
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# === EXTERNAL SERVICES ===
# Exchange Rate API
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_BASE_URL=https://api.exchangerate-api.com/v4

# Email Configuration (if needed)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# === MONITORING ===
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# === SSL/TLS CONFIGURATION ===
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# === CORS SETTINGS ===
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# === CACHE CONFIGURATION ===
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://redis:6379/1
CACHE_DEFAULT_TIMEOUT=300

# === DEVELOPMENT/DEBUG SETTINGS ===
DEBUG=false
TESTING=false
PROPAGATE_EXCEPTIONS=false

# === HEALTH CHECK SETTINGS ===
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# === AUTO-SCALING ===
AUTO_SCALE_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20
SCALE_COOLDOWN=300
